{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": false,
        "target": "es6",
        "sourceMap": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "types": ["node"]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}